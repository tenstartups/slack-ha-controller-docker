[
  {
    "id": "ha",
    "execute-command": "/var/scripts/ha",
    "command-working-directory": "/var/scripts",
    "response-message": "Running home automation command",
    "include-command-output-in-response": true,
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "text"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "value",
            "value": "/ha",
            "parameter": {
              "source": "payload",
              "name": "command"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "SLACKTOKEN",
            "parameter": {
              "source": "payload",
              "name": "token"
            }
          }
        },
        {
          "match": {
            "type": "regex",
            "regex": "^(marclennox)|(marc)$",
            "parameter": {
              "source": "payload",
              "name": "user_name"
            }
          }
        }
      ]
    }
  }
]
